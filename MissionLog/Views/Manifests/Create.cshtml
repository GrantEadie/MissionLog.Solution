@{
  Layout = "_Layout";
}

@model MissionLog.Models.Manifest;
<br><br>
<h4>Add a new manifest</h4><hr> 
<div class="row">
  <div class="col-sm">

    @using (Html.BeginForm())
    {
        @Html.Label("Title")
        <br>
        @Html.TextBoxFor(model => model.ManifestTitle, new {@required="required"})
        <br><br>
        @Html.Label("Life Support Supplies")
        <br>
        @Html.TextBoxFor(model => model.ManifestLifeSupportSupply, new {@required="required"})
        <br><br>
        @Html.Label("Cargo")
        <br>
        @Html.TextBoxFor(model => model.ManifestShipCargo, new {@required="required"})
        <br><br>
        @Html.Label("Weapons")
        <br>
        @Html.TextBoxFor(model => model.ManifestWeapon, new {@required="required"})
        
        @* @Html.Label("Select Mission")
        @Html.DropDownList("MissionId") *@
        
        @* @Html.Label("Select Ship")
        @Html.DropDownList("ShipId") *@

        <br><br>
        <input type="submit" value="Add New Manifest" class="btn btn-light btn-block btn-sm" />
    }
    <br>
    <p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-outline-warning btn-block btn-sm"})</p>
  </div>
  <div class="col-sm">

    </div>
    <div class="col-sm">
    </div>
</div>