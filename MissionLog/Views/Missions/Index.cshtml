@using MissionLog.Models;
@{
  Layout = "_Layout";
}

<div class="jumbotron">
<h2>LOGGED MISSIONS</h2>
<hr>
</div>

@if (@Model.Count == 0)
{
  <p>No missions have been added</p>
}
@foreach (Mission mission in Model)
{
  <li>@Html.ActionLink($"{mission.MissionName}", "Details", new { id = mission.MissionId }) </li>
}
<br>
<p>@Html.ActionLink("ADD NEW MISSION", "Create", null, null, new {@class="btn btn-light btn-sm"})</p>