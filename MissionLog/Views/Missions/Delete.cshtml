@{
  Layout = "_Layout";
}
@model MissionLog.Models.Mission

<h3>Are you sure you want to delete this?</h3>

<strong>@Html.DisplayName("Name"):</strong> @Html.DisplayFor(model => model.MissionName)
@using (Html.BeginForm())
{
  <br>
  <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.MissionId}, new {@class="btn btn-light btn-sm"})</p>
