@using MissionLog.Models;
@{
  Layout = "_Layout";
}
<div class="jumbotron">
<h2>STARSHIPS</h2>
<hr>
</div>
@if (@Model.Count == 0)
{
  <p>No starships have been added</p>
}
@foreach (Ship ship in Model)
{
  <li>@Html.ActionLink($"{ship.ShipName}", "Details", new { id = ship.ShipId }) </li>
}
<br>
<p>@Html.ActionLink("ADD NEW SHIP", "Create", null, null, new {@class="btn btn-light btn-sm"})</p>