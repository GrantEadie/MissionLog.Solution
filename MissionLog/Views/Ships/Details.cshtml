@{
  Layout = "_Layout";
}
@model MissionLog.Models.Ship;
<br><br>
<div class="container">
  <div class="row">
    <div class="col-sm">
    
      <h3>@Html.DisplayFor(model => model.ShipName)</h3>
<hr>
@if(Model.Missions.Count == 0)
{
  <p>This ship does not have any missions.</p>
}
else
{
  <h4>Missions: </h4>
  @foreach(var join in Model.Missions)
  {
    <p>@Html.ActionLink($"{join.Mission.MissionName}", "Details", "Missions", new { id = join.Mission.MissionId })</p>
    @using (Html.BeginForm("DeleteMission", "Ships"))
    {
      @Html.Hidden("shipId", @join.ShipId)
      @Html.Hidden("joinId", @join.ShipMissionId)
      <input type="submit" value="Delete" class="btn btn-outline-warning btn-xs" />
    }
  }
}
<br>
@if(Model.Manifests.Count == 0)
{
  <p>This ship does not have any manifests currently assigned.</p>
}
else
{
  <h4>Manifest:</h4>
  @foreach(var join in Model.Manifests)
  {
    <p>@Html.ActionLink($"{join.Manifest.ManifestTitle}", "Details", "Manifests", new { id = join.Manifest.ManifestId }, new { @class="list-detail"})</p>
    @using (Html.BeginForm("DeleteManifest", "Ships"))
    {
      @Html.Hidden("shipId", @join.ShipId)
      @Html.Hidden("joinId", @join.ShipManifestId)
      <input style="margin-top:-20px" type="submit" value="Delete" class="btn btn-outline-warning btn-xs" />
    }
  }
}
<hr>
<br>

  @* back button *@

  <a style="float:left" href="/Vessels" class="btn btn-outline-light"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm9.5 8.5a.5.5 0 0 0 0-1H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5z"/>
  </svg></a>

  @* edit button *@

  <a style="float:right" href="/Ships/Edit/@Model.ShipId" class="btn btn-outline-light"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pen-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
  </svg></a> 
  
  @* delete button *@

  <a style="float:right; margin-right:7px;" href="/Ships/Delete/@Model.ShipId" class="btn btn-outline-light"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
  </svg></a>
<br><br><br>  

<p>@Html.ActionLink("Add a Manifest", "AddManifest", "Ships", new { id = Model.ShipId } , new {@class="btn btn-outline-info btn-sm btn-block"})</p>
<p>@Html.ActionLink("Add a Mission", "AddMission", "Ships", new { id = Model.ShipId } , new {@class="btn btn-outline-success btn-sm btn-block"})</p>
    </div>
    <div class="col-sm">

    </div>
    <div class="col-sm">

    </div>
  </div>
</div>

